+	Creates a barrier...
+*/
+private["_position","_roadbarrier"];
+_roadbarrier = "RoadBarrier_small_F" createVehicle [0,0,0];
+_roadbarrier attachTo[player,[0,5.5,0]];
+_roadbarrier setDir 90;
